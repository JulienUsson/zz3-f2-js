---
import { type CollectionEntry, getCollection, render } from "astro:content";
import Practice from "../../layouts/Practice.astro";

export async function getStaticPaths() {
  const practices = await getCollection("practices");
  return practices.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"practices">;

const practice = Astro.props;
const { Content } = await render(practice);
---

<Practice {...practice.data}>
  <Content />
</Practice>
